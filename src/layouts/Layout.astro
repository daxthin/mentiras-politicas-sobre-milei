<style is:global>
	html, body {
		margin: 0;
		padding: 0;
		font-family: 'Mohave';
		font-size: 20px;
	}
	body {
		background-color: #0f172a;
		color: rgb(219, 219, 219);
		font-weight: 300;
		display: flex;
		flex-direction: row;
		height: 100vh;
  		overflow: hidden;
	}

	main {
		display: flex;
		flex-direction: column;
		width: 100%;
		height: 100vh;
		overflow-y: hidden;
		box-sizing: border-box;
  		scroll-snap-type: y mandatory;
		scroll-behavior: smooth;
		transition: 500ms ease-in-out;
	}

	p {
		/* font-family: 'EB Garamond', serif; */
		font-family: 'Mohave';
		font-weight: 300;
	}

	.section {
		/* width: 40%; */
		min-height: 100vh;
		width: 100%;
		display: flex;
		box-sizing: border-box;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		align-self: center;
	}

	#title {
		position: absolute;
		font-size: 1rem;
	}

	.wrapper {
		width: 600px;
		gap: 20px;
		display: flex;
		flex-direction: column;
	}

	/* a {
		text-decoration: none;
		color: white;
	} */
	
	.proposals-list li {
		color: gray;
    }

	.proposals-list li.active {
		color: rgb(231, 231, 231);
    }

	.proposals-list li {
		list-style: none;
		transition: color 250ms ease-in-out;
	}

	li.active::before {
		font-size: 1rem;
		margin-left: 5px;
		margin-right: 5px;
		content: '>';
	}

	li {
		font-size: 1rem;
		line-height: 1;
		cursor:pointer;
	}

	.links {
		position: fixed;
		margin-left: 30px;
		margin-top: 15px;
		display: flex;
		gap: 10px;
	}

	a {
		color: #fa5252f5;
		text-decoration: none;
		transition: 250ms ease-in-out;
		font-size: 18px;
	}

	a:hover {
		color: #ffffff;
		text-decoration: none;
	}

	.higher-accent-color {
		color: #fa5252f5;
		font-style: normal;
	}

	.lower-accent-color {
		color: grey;
	}

	#voucher-img {
		opacity: 0.75;
	}

	.bg-style-one {
		background-color: #0f172a;
	}
	
	.bg-style-two {
		background-color: #182441;
	}
</style>
